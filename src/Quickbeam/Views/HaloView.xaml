<UserControl x:Class="Quickbeam.Views.HaloView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:embedded="clr-namespace:Quickbeam.Embedded"
    mc:Ignorable="d"
    Background="#28282b"
    d:DesignWidth="640" d:DesignHeight="480">
    <embedded:DpiDecorator>
        <Grid Name="OuterHaloGrid"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <embedded:HaloWindow Width="{Binding ElementName=OuterHaloGrid,Path=ActualWidth}"
                                 Height="{Binding ElementName=OuterHaloGrid,Path=ActualHeight}"
                                 HorizontalAlignment="Left"
                                 VerticalAlignment="Top"/>
        </Grid>
    </embedded:DpiDecorator>
</UserControl>
