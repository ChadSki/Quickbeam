<UserControl x:Class="Quickbeam.Views.HaloView"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:views="clr-namespace:Quickbeam.Views"
    mc:Ignorable="d"
    Background="#28282b"
    d:DesignWidth="640" d:DesignHeight="480">
    <views:DpiDecorator>
        <Grid Name="OuterHaloGrid"
              HorizontalAlignment="Stretch"
              VerticalAlignment="Stretch">
            <views:HaloHost Width="{Binding ElementName=OuterHaloGrid,Path=ActualWidth}"
                              Height="{Binding ElementName=OuterHaloGrid,Path=ActualHeight}"
                              HorizontalAlignment="Left"
                              VerticalAlignment="Top"/>
        </Grid>
    </views:DpiDecorator>
</UserControl>
