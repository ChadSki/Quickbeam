<UserControl x:Class="MetroIde.Pages.HaloPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:helpers="clr-namespace:MetroIde.Helpers"
    mc:Ignorable="d"
    Background="#28282b"
    d:DesignWidth="850" d:DesignHeight="650">
    <Grid Name="ContainerGrid"
          HorizontalAlignment="Stretch"
          VerticalAlignment="Stretch">
        <Grid HorizontalAlignment="Left"
              VerticalAlignment="Top">
            <helpers:HaloWindow MaxWidth="800" MaxHeight="600"
                                Width="{Binding ElementName=ContainerGrid,Path=ActualWidth}"
                                Height="{Binding ElementName=ContainerGrid,Path=ActualHeight}"/>
        </Grid>
    </Grid>
</UserControl>
