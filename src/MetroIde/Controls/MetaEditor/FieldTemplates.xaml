<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- Integers -->
    <DataTemplate x:Key="Int8FieldTemplate">
        <WrapPanel>
            <TextBox Text="{Binding Key, Mode=OneWay}" IsReadOnly="True" Width="140" Background="Transparent" BorderThickness="0" BorderBrush="Transparent"/>
            <TextBox Width="140" Text="{Binding Value.Value, Mode=TwoWay}" />
        </WrapPanel>
    </DataTemplate>
