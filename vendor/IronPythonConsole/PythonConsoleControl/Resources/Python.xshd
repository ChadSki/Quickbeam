<SyntaxDefinition name="Python" extensions=".py">

  <Properties>
    <Property name="LineComment" value="#"/>
  </Properties>

  <Digits name="Digits" color="#DE935F"/>

  <RuleSets>
    <RuleSet ignorecase="false">

      <Delimiters>()[]{}@,:.`=;+-*/% &amp;|^&gt;&lt;</Delimiters>

      <Span name="DocComment" color="#969896">
        <Begin>"""</Begin>
        <End>"""</End>
      </Span>
      <Span name="SingleQuoteDocComment" color="#969896">
        <Begin>'''</Begin>
        <End>'''</End>
      </Span>
      <Span name="LineComment" stopateol="true" color="#969896">
        <Begin>#</Begin>
      </Span>
      <Span name="String" stopateol="true" color="#B5BD68" escapecharacter="\">
        <Begin>"</Begin>
        <End>"</End>
      </Span>
      <Span name="Char" stopateol="true" color="#B5BD68" escapecharacter="\">
        <Begin>'</Begin>
        <End>'</End>
      </Span>

      <!-- Function invocation -->
      <MarkPrevious color="#81A2BE">(</MarkPrevious>

      <KeyWords name="Prompt" color="#8ABEB7">
        <Key word="&gt;&gt;&gt;"/>
        <Key word="..."/>
      </KeyWords>

      <KeyWords name="BuiltInStatements" color="#B294BB">
        <Key word="assert"/>
        <Key word="break"/>
        <Key word="class"/>
        <Key word="continue"/>
        <Key word="def"/>
        <Key word="del"/>
        <Key word="elif"/>
        <Key word="else"/>
        <Key word="except"/>
        <Key word="exec"/>
        <Key word="finally"/>
        <Key word="for"/>
        <Key word="from"/>
        <Key word="global"/>
        <Key word="if"/>
        <Key word="in"/>
        <Key word="import"/>
        <Key word="lambda"/>
        <Key word="pass"/>
        <Key word="print"/>
        <Key word="raise"/>
        <Key word="return"/>
        <Key word="try"/>
        <Key word="while"/>
        <Key word="yield"/>
      </KeyWords>

      <KeyWords name="Self" color="#CC6666">
        <Key word="self" />
      </KeyWords>

      <KeyWords name="keyword.operator.logical.python" color="#B294BB">
        <Key word="and" />
        <Key word="in" />
        <Key word="is" />
        <Key word="not" />
        <Key word="or" />
      </KeyWords>

      <KeyWords name="keyword.operator.comparison.python" color="#8ABEB7">
        <Key word="&lt;=" />
        <Key word="&gt;=" />
        <Key word="==" />
        <Key word="&lt;" />
        <Key word="&gt;" />
        <Key word="\!=" />
      </KeyWords>

      <KeyWords name="keyword.operator.assignment.python" color="#8ABEB7">
        <Key word="=" />
        <Key word="+=" />
        <Key word="-=" />
        <Key word="*=" />
        <Key word="/=" />
        <Key word="//=" />
        <Key word="%=" />
        <Key word="&amp;=" />
        <Key word="=" />
        <Key word="^=" />
        <Key word="&gt;&gt;=" />
        <Key word="&lt;&lt;=" />
        <Key word="**=" />
      </KeyWords>

      <KeyWords name="keyword.operator.arithmetic.python" color="#8ABEB7">
        <Key word="+" />
        <Key word="-" />
        <Key word="*" />
        <Key word="**" />
        <Key word="/" />
        <Key word="//" />
        <Key word="%" />
        <Key word="&lt;&lt;" />
        <Key word="&gt;&gt;" />
        <Key word="&amp;" />
        <Key word="^" />
        <Key word="~" />
      </KeyWords>
    </RuleSet>
  </RuleSets>
</SyntaxDefinition>
